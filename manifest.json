{
    "name": "jinnmail",
    "version": "1.0",
    "description": "An email address manager offering unlimited on-demand, unique, anonymous email aliases.",
    "author": "Ahex Technologies<https://ahex.co>",
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icons/icon-1.png",
        "128": "icons/icon-3.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    }, 
    "externally_connectable": {
        "matches": [
            "https://jinnmaildash.herokuapp.com/"
        ],
        "accepts_tls_channel_id": false
      },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "scripts/jQuery.js",
                "scripts/content.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "styles/content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "icons/icon-1.png",
            "38": "icons/icon-2.png"
        },
        "default_title": "jinn mail",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}